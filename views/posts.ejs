<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title>Forum Posts</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    .post-list-container { max-width: 700px; margin: 40px auto 0 auto; }
    .post-summary { border:1px solid #333; margin:20px 0; padding:20px; border-radius: 8px; background: #23283a; }
  </style>
</head>
<body>
  <div class="post-list-container">
    <h1>Forum Posts</h1>
    <% if (posts && posts.length) { %>
      <% posts.forEach(post => { %>
        <div class="post-summary">
          <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
          <p><%= post.summary %>...</p>
        <small>Von <a href="/user/<%= post.username %>"><%= post.username %></a> am <%= new Date(post.erstellt_am).toLocaleString('de-DE') %></small>
        </div>
      <% }) %>
    <% } else { %>
      <p>Noch keine Beiträge vorhanden.</p>
    <% } %>
    <a href="/" class="btn">Zurück zur Startseite</a>
  </div>
</body>
</html>
